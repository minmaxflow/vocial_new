<div class="poll-form">
  <h2>New Poll</h2>
  <%= form_for @poll, Routes.poll_path(@conn, :create), fn f -> %>
    <label>
      Title: <br/>
      <%= text_input f, :title %>
    </label>
    <label>
      Options (seperated by commans): <br />
      <input type="text" name="options">
    <label>
    <br />
    <%= submit "Create" %>
  <% end %>
</div>